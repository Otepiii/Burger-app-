<div>

    <div class="jumbotron" style="background-color: #fdcc05;">
      <h1 class="text-center"> Eat Da Burger!</h1>
        <img src="/assets/images/burger.png" alt="burgers">

     

    </div>

    <div class="row">
        <div class="col-md-6">
            <h3>Burgers</h3>
            <ul class="list-group">
                {{#each burgers}}
                    {{#unless this.devoured}}
                    <li class="list-group-item">
                        {{this.id}}. {{this.burger_name}}
                            <button type="button" class="btn btn-primary burger-button" devoured={{this.devoured}} value={{this.id}} >Devour</button>
                    </li>
                    {{/unless}}
                {{/each}}    
            </ul>
        </div>


    <div class="col-md-6">
        <h3>Devoured Burgers</h3>
        <ul class="list-group">
            {{#each burgers}}
                {{#if this.devoured}}
                    <li class="list-group-item">
                        {{this.id}}. {{this.burger_name}}
                         <button type="button" class="btn btn-primary burger-button" devoured={{this.devoured}} value={{this.id}}>Vomit</button>
                    </li>
                {{/if}}
            {{/each}}        
        </ul>
    </div>

</div>

<div class="row">
    <div class="col-md-6 add-burger">
        <h3>Add a Burger</h3>
        
            
                <p><input type="text" id="burger" name="burger_name"></p>


            <button type="submit" class="btn btn-primary add-burger">Submit</button>
    </div>
</div>