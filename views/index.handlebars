<div>

    <div class="jumbotron" style="background-color: #fdcc05;">
      <h1 class="text-center"> Eat Da Burger!</h1>
        <img src="/assets/images/burger.png" alt="burgers">

     

    </div>

    <div class="row">
        <div class="col-md-6">
            <h3>Burgers</h3>
            <ul class="list-group">
                {{#each burgers}}
                    {{#unless this.devoured}}
                    <li class="list-group-item">
                        {{this.id}}. {{this.burger_name}}
                        <form action="/{{this.id}}?_method=PUT" method="POST">
                            <input type="hidden" name="devoured" value="false">
                            <button type="submit" class="btn btn-primary">Devoured</button>
                        </form>
                    </li>
                    {{/unless}}
                {{/each}}    
            </ul>
        </div>


    <div class="col-md-6">
        <h3>Devoured Burgers</h3>
        <ul class="list-group">
            {{#each burgers}}
                {{#if this.devoured}}
                    <li class="list-group-item">
                        {{this.id}}. {{this.burger_name}}
                    </li>
                {{/if}}
            {{/each}}        
        </ul>
    </div>

</div>

<div class="row">
    <div class="col-md-6 add-burger">
        <h3>Add a Burger</h3>
        <form class="create-update-form" action="/" method="POST">
        
            <div class="form-group">
                <p><input type="text" id="burger" name="burger_name"></p>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>